<?xml version="1.0" encoding="utf-8"?>
<rotate
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="720">

    <shape
        android:shape="ring"
        android:thicknessRatio="12"
        android:useLevel="false">

        <size
            android:width="50dp"
            android:height="50dp"/>

        <gradient
            android:angle="0"
            android:endColor="@color/red_thunderbird"
            android:startColor="@color/red_cinnabar"
            android:type="sweep"
            android:useLevel="false"/>
    </shape>
</rotate>
